<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ebc003.pathologyapp.ActivityContactUs">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:contentPadding="7dp"
        android:padding="10dp"
        android:layout_margin="7dp"
        card_view:cardBackgroundColor="#FFF"
        android:background="#B2DFDB">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:background="@color/light_blue"
                    android:textColor="@color/dark_blue"
                    android:text="Pathology Lab Name: "
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/path_lab_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Name Show Here"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:background="@color/light_blue"
                    android:textColor="@color/dark_blue"
                    android:text="Address : "
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Address Show Here"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:background="@color/light_blue"
                    android:textColor="@color/dark_blue"
                    android:text="E-mail ID : "
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
        </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:autoLink="email"
                    android:text="Email Show Here"
                    android:textColorLink="@color/dark_blue"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                  android:background="@color/light_blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Website : "
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"/>
                </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Website "
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:autoLink="web"
                    android:textColorLink="@color/dark_blue"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:background="@color/light_blue" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contact No. "
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contact No. "
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:autoLink="phone"
                    android:textColorLink="@color/dark_blue"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp"
                android:background="@color/light_blue" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Timings "
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/opening_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:text="Open On "
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"/>
                </TableRow>
            <TableRow
                android:background="@color/light_blue">
                <TextView
                    android:id="@+id/opening_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:text="Opening time "
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>